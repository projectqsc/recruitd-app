<% @industries.each do |industry| %>
 
<div class="well">
  <div class="row">
    <div class="col-md-10">
      <div class="textbluebold">
        <%= industry.name %>
      </div>
    </div>
    
    <div class="col-md-2">
      <%= link_to "Delete", user_profile_industry_path(current_user, @profile, industry), :method => :delete, :data => {:confirm => "Are you Sure"}, :class => "delete" %>
    </div>
  </div>
</div>

<% end %>