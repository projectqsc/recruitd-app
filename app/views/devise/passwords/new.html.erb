<div class="super-hack-div" id="sign-in-page">
  <div id="post-application">
    <div class="container">
      <div class="row">
        <div class="col-xs-6 col-xs-offset-3">
          <div class="white-form">
            <p class="title center-text">Forgot your password</p>
            <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post,class: "settings-personal" }) do |f| %>
                <%= f.error_notification %>

                <%= f.input :email, required: true, autofocus: true %><br/><br/><br/>

                <%= f.button :submit, "Send me reset password instructions" %>
              <% end %>

  <%#= render "devise/shared/links" %>

            </div><!-- white-form -->

          </div><!-- col-xs-12 -->
        </div><!-- row -->
      </div><!-- container -->
    </div><!-- post-application -->
  </div><!-- super-hack-div -->






