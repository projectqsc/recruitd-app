<%#= render "devise/shared/links" %>

<div class="super-hack-div sign-up-page" id="sign-in-page">
  <div id="post-application">
    <div class="container">
      <div class="row">
        <div class="col-xs-12 col-md-8 col-md-offset-2">

          <ul id="tab-wrapper">
            <li class="tab active">Talent</li>
            <li class="tab">Employer</li>
          </ul><!-- tab-wrapper -->


          <div class="white-form">

            <div id="for-talent" style="display:none;">
              <a href="/users/auth/linkedin"><button class="connect-linkedin">Linkedin connect</button></a>
              <hr class="left hidden-xs hidden-sm"><span class="hidden-xs hidden-sm">OR</span><hr class="right hidden-xs hidden-sm"><br><br>
              <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {:class => 'settings-personal' }) do |f| %>

                <div class="row">
                  <%= f.error_notification %>
                  <div class="col-xs-6">
                    <%= f.input :name,:label => "First Name",:placeholder => "First Name" %><br><br><br>
                    <%= f.input :location, :label => "City",:placeholder => "City"  %><br><br><br>
                    <%= f.input :email,placeholder: 'user@domain.com',required: true, autofocus: true %><br><br><br>

                  </div><!-- col-xs-6 -->

                  <div class="col-xs-6">
                    <%= f.input :last_name,:placeholder => "Last Name"  %><br><br><br>
                    <%= f.input :contry,:label => "Country", :collection => Location.country_names,:include_blank => false, :wrapper => false, :input_html => {:class => "user_contry"}%>
                    <%= f.input :password,:placeholder => "********",required: true %><br><br><br>
                  </div><!-- col-xs-6 -->

                </div><!-- row -->

                <%= f.button :submit, "Apply" ,:class=>"sign-in" %>

              <% end %>
            </div><!-- for-talent -->

          </div><!-- white-form -->



        </div><!-- col-xs-12 -->
      </div><!-- row -->
    </div><!-- container -->
  </div><!-- post-application -->
</div><!-- super-hack-div -->
