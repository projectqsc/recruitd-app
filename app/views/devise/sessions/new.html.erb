<div class="super-hack-div" id="sign-in-page">
  <div id="post-application">
    <div class="container">
      <div class="row">
        <div class="col-xs-6 col-xs-offset-3">
          <div class="white-form">
            <p class="title center-text">Sign in</p>
            <a href="/users/auth/linkedin"><button class="connect-linkedin">Linkedin connect</button></a>
            <hr class="left"><span>OR</span><hr class="right">
            <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), :html=> { class: "settings-personal" }) do |f| %>
                <%= f.input :email, required: false, autofocus: true %><br><br><br>
                <%= f.input :password, required: false %><br><br><br>
                <%= f.button :submit, "Sign in" ,:class=>"sign-in"%>

                <div class="forgot"><a href="<%= new_password_path(resource_name) %>">forgot password?</a></div>
                <div class="sign-up"><a href="<%=new_registration_path(resource_name)%>">sign up</a></div>

              <% end %>
            </div><!-- white-form -->

          </div><!-- col-xs-12 -->
        </div><!-- row -->
      </div><!-- container -->
    </div><!-- post-application -->
  </div><!-- super-hack-div -->